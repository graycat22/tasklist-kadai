<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  
<h1>タスク一覧</h1>

<%= render "tasks", tasks: @tasks %>

<%= link_to "新規タスクの追加", new_task_path %>

<%= link_to 'ログアウト', logout_path, method: :delete %>

<% else %>

<h1>タスクリスト</h1>
<%= link_to 'サインアップ', signup_path %>
<%= link_to 'Login', login_path %>

<% end %>